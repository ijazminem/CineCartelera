
@model CineCartelera.Models.Genero

@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Agregar">
    <div class="border mt-5 p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">


        </div>
        <div class="form-group row">
            <h2 class="text-light pl-3 text-center">Nuevo Género</h2>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                <label asp-for="NombreGenero" class="form-label">Género</label>
               <input asp-for="NombreGenero" class="form-control" />
               <span asp-validation-for="NombreGenero" class="text-danger"></span>


            </div>
        </div>

         <div class="row justify-content-center">
                <div class="col-md-4">
                <label asp-for="MostrarOrden" class="form-label">Orden</label>
               <input asp-for="MostrarOrden" class="form-control" />
               <span asp-validation-for="MostrarOrden" class="text-danger"></span>

            </div>
        </div>

        <br />

        <div class=" d-grid gap-3 d-md-block text-center">
            <button type="submit" class="btn btn-outline-light">Agregar</button>
            <a asp-controller="Genero" asp-action="Index" class="btn btn-outline-success">Regresar</a>
    </div>
    </div>
    </div>


</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
