@model CineCartelera.Models.Pelicula
@{
    var titulo = "Eliminar Película existente";
   
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar" enctype="multipart/form-data">
        <input asp-for="Id" hidden/>
   


    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-light"></div>
        <div class="row">
            <h2 class="text-secondary text-center">@titulo</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-7">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="NombrePelicula" class="form-label">Nombre de la Película</label>
                            <input asp-for="NombrePelicula" disabled class="form-control" />
                            
                        </div>
                    </div>

                     <div class="row">
                        <div class="col-md-8">
                            <label asp-for="GeneroId" class="form-label">Género de la Película</label>
                             <input asp-for="GeneroId" hidden class="form-control" />
                              <input asp-for="Genero.NombreGenero" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="DirectorId" class="form-label">Director de la Película</label>
                             <input asp-for="DirectorId" hidden class="form-control" />
                             <input asp-for="Director.Nombre" class="form-control" />
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-8">
                            <label asp-for="Sinopsis" class="form-label">Sinopsis de la Película</label>
                            <textarea asp-for="Sinopsis" disabled class="form-control summernote"></textarea>
                            
                        </div>
                    </div>

                     <div class="row">
                        <div class="col-md-8" hidden>
                            <label asp-for="ImagenUrl" class="form-label">Poster de la Película</label>
                            <input asp-for="ImagenUrl" class="form-control" />
                          
                        </div>
                    </div>

             

                    <br />
                    <div class=" d-d-grid gap-2 d-md-block text-center">
                      
                            <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                        
                        <a asp-controller="Pelicula" asp-action="Index" class="btn btn-outline-success">Regresar</a>
                    </div>


                </div>
            </div>

            <div class="col-5">
                @if (Model.Id != 0)
                    {
                     <img scr="@WC.ImagenRuta@Model.ImagenUrl" width="50%" />
                }
               

            </div>
        </div>


</div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

   
    


}


