@model CineCartelera.Models.ViewModels.HomeVM

<div class="container">

	<div class="text-center">
		<button class="btn btn-light filter-button" data-filter="all">Todos</button>

		@foreach(var gen in Model.Generos){
			<button class="btn btn-light filter-button" data-filter="@gen.NombreGenero.Replace(' ','_')">
				@gen.NombreGenero
			</button>

		}

	</div>

	<br />

	<div class="row">
		@foreach (var peli in Model.Peliculas)
		{
			//Mostrar todas las películas
			<partial name="_PeliculaCard" model="peli"/> 
		}
	


</div>

@section Scripts{


	<script>
	$(document).ready(function(){

	$(".filter-button").click(function(){

		var value = $(this).attr('data-filter');
		if(value == "all")
		{
			$('.filter').show('1000');
		}
		else
		{
			$(".filter").not('.'+value).hide('3000');
			$('.filter').filter('.'+value).show('3000');
			
		}
	});

});
</script>
}